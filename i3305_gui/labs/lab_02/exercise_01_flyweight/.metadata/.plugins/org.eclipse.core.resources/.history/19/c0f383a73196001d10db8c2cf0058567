package exercise_01_flyweight;

import java.util.HashMap;

public class Letter {
	private static final HashMap CharMap = new HashMap();
	private static boolean upperCase;
	
	public static final Letter getLetter(char letter) {
		Letter result = (Letter)CharMap.get(Character.toLowerCase(letter));
		
		if (result == null) {
			result = new Letter(letter);
			CharMap.put(letter, result);
			System.out.println("Creating character for: '" + letter + "'");
		}
		
		if (Character.isUpperCase(letter)) upperCase = true;
		else upperCase = false;
		
		return result;
	}
	
	public Letter(char letter) {
		this.letter = Character.toLowerCase(letter);
	}
}
